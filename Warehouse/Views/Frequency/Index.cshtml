@{ 
    ViewBag.Title = "Frequency";
}

<div class="col-md-9">
    <section class="panel">
        <header class="panel-heading">
            Frequencies
        </header>
        <div class="panel-body">
            @*<div class="alert alert-danger">
                <span class="alert-icon"><i class="fa fa-exclamation"></i></span>

            </div>*@
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <td>Value</td>
                        <td>Date Create</td>
                        <td style="width: 25%;">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var frequency in Model)
                    {
                        <tr>
                            <td>@frequency.Value</td>
                            <td>@frequency.DateCreate.ToString("dd/MM/yyyy")</td>
                            <td style="width: 25%;">
                                <a asp-controller="Frequency" asp-action="Edit" asp-route-id="@frequency.Id" class="btn btn-info"><i class="fa fa-edit"></i> Edit</a>
                                <a asp-controller="Frequency" asp-action="Delete" asp-route-id="@frequency.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
<div class="col-md-3">
    <div class="panel">
        <header class="panel-heading">
            Options
        </header>
        <div class="panel-body">
            <a class="btn btn-success" asp-controller="Frequency", asp-action="Create"><i class="fa fa-plus"></i> Frequency</a>
        </div>
    </div>
</div>